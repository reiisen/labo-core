generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_FLUX")
}

model Subject {
  id     Int      @id @default(autoincrement())
  name   String
  code   String
  dosen  String
  course Course[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Lab {
  id        Int       @id @default(autoincrement())
  name      String
  code      String
  floor     Int
  schedules Course[]
  reserves  Reserve[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Course {
  id        Int     @id @default(autoincrement())
  subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId Int
  lab       Lab     @relation(fields: [labId], references: [id])
  labId     Int
  timeslot  Int
  day       Int
  length    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Reserve {
  id       Int      @id @default(autoincrement())
  lab      Lab      @relation(fields: [labId], references: [id])
  labId    Int
  name     String
  reason   String
  date     DateTime
  length   Int
  status   Status
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Status {
  PENDING
  ACTIVE
  CONCLUDED
  CANCELLED
}
