generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_FLUX")
}

model Subject {
  id        Int        @id @default(autoincrement())
  name      String
  code      String
  dosen     String
  schedules Schedule[]
}

model Lab {
  id        Int        @id @default(autoincrement())
  name      String
  code      String
  floor     Int
  schedules Schedule[]
  reserves  Reserve[]
}

model Schedule {
  id        Int     @id @default(autoincrement())
  subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId Int
  lab       Lab     @relation(fields: [labId], references: [id])
  labId     Int
  timeslot  Int
  day       Int
  length    Int
}

model Reserve {
  id       Int    @id @default(autoincrement())
  lab      Lab    @relation(fields: [labId], references: [id])
  labId    Int
  name     String
  reason   String
  timeslot Int
  day      Int
  length   Int
  status   Status
}

enum Status {
  PENDING
  ACTIVE
  CONCLUDED
  CANCELLED
}
