generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_FLUX")
}

model Lab {
  id        Int       @id @default(autoincrement())
  name      String
  code      String
  floor     Int
  reserves  Reserve[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Reserve {
  id       Int      @id @default(autoincrement())
  lab      Lab      @relation(fields: [labId], references: [id])
  labId    Int
  name     String
  reason   String
  date     DateTime
  length   Int
  status   Status
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Status {
  PENDING
  ACTIVE
  CONCLUDED
  CANCELLED
}
